<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/player_item_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">

        <TextView
            android:id="@+id/player_item_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:maxLines="1"

            android:text="Player Name"/>

        <TextView
            android:id="@+id/player_item_text_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"

            android:text="game name"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/player_item_image_avatar"
        android:layout_width="wrap_content"
        android:maxWidth="144dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/player_item_text_name"
        android:layout_alignParentRight="true"


        android:src="@drawable/avatar_default"
        />

</LinearLayout>