<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.angryscarf.gamenews.Fragments.NewDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#aa000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:layout_margin="16dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/new_details_image_cover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/cover_default_no_game"/>

                    <ImageView
                        android:id="@+id/new_details_image_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/new_details_image_cover"
                        android:layout_marginTop="-48dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_favorite"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/new_details_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:alpha="0.7"

                    android:text="A rather long title for testing purposes"/>


                <TextView
                    android:id="@+id/new_details_text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"

                    android:text="Short description about the new trying not to make it too long to not be able to fit in a few lines"/>

                <TextView
                    android:id="@+id/new_details_text_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"

                    android:textColor="@color/colorPrimaryText"

                    android:text="Rather long new text holding details about what's been said on the description above.
    Be several lines long.
    ........
    .....
    .....
    ...
    ..
    ."/>


            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/new_details_frame_game"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="@color/colorGameDefault">
        </FrameLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
