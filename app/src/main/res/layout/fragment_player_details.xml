<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.angryscarf.gamenews.Fragments.NewDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/alphaHideBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:layout_margin="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">



                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/player_details_image_avatar"
                    android:layout_width="wrap_content"
                    android:maxWidth="144dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:siBorderWidth="0dp"
                    app:siBorderAlpha="0"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar_default"/>



                <TextView
                    android:id="@+id/player_details_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:alpha="0.7"

                    android:text="jaiel"/>


                <TextView
                    android:id="@+id/player_details_text_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"

                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"

                    android:text="League of Legends"/>

                <TextView
                    android:id="@+id/player_details_text_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"

                    android:layout_marginTop="16dp"

                    android:textColor="@color/colorPrimaryText"
                    android:text="The rather uncommon yet not so special story of my life.
    ........
    .....
    .....
    ...
    ..
    ."/>


            </LinearLayout>
        </ScrollView>


        <FrameLayout
            android:id="@+id/player_details_frame_game"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="@color/colorGameDefault">
        </FrameLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>
